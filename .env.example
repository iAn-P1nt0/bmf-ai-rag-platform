# Azure Configuration
AZURE_OPENAI_ENDPOINT=https://your-foundry.azure.com
AZURE_OPENAI_API_KEY=your-api-key
AZURE_OPENAI_DEPLOYMENT_NAME=claude-3-5-sonnet

# AgentSet Configuration
AGENTSET_API_KEY=your-agentset-key
AGENTSET_INDEX_NAME=bmf-rag-v1
AGENTSET_API_URL=https://api.agentset.ai/v1

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=ap-south-1
S3_BUCKET_RAW=bmf-rag-raw
S3_BUCKET_PROCESSED=bmf-rag-processed
S3_BUCKET_BACKUPS=bmf-rag-backups

# Database Configuration
SQLITE_DB_PATH=./data/cache/bmf_diff.db
POSTGRES_URL=postgresql://user:pass@localhost:5432/bmf_rag

# Scraping Configuration
SCRAPE_RATE_LIMIT=2
SCRAPE_USER_AGENT=BMF-RAG-Bot/1.0
SCRAPE_TIMEOUT=30
ENABLE_SCREENSHOTS=true

# Monitoring & Alerts
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
PAGERDUTY_API_KEY=your-pagerduty-key
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx
OPS_ALERT_EMAIL=ops-alert@bmf.ai

# Performance Thresholds
RETRIEVAL_CONFIDENCE_THRESHOLD=0.6
LATENCY_TARGET_MS=500
LATENCY_WORST_MS=900
RETRIEVAL_ACCURACY_TARGET=0.80
STALE_METADATA_THRESHOLD=0.03

# Pipeline Configuration
PIPELINE_SCHEDULE_DISCOVERY=0 30 0 * * *
PIPELINE_SCHEDULE_SCRAPER=0 0 2 * * *
PIPELINE_SCHEDULE_HARVESTER=0 30 2 * * *
PIPELINE_SCHEDULE_PARSER=0 0 3 * * *
PIPELINE_SCHEDULE_CHUNKER=0 30 3 * * *
PIPELINE_SCHEDULE_VALIDATOR=0 0 4 * * *

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_PATH=./logs
